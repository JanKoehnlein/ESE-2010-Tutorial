grammar org.eclipse.ese.Android with org.eclipse.xtext.common.Terminals 

import "platform:/resource/org.eclipse.ese.android.model/src/android.ecore" 

Project:
	'Project' name=ID 
		activities+=Activity+;

Activity:
	'Activity' name=ID '{'
		widgets+=Widget* '}';
		

Widget:
	Text | Button | Spinner | Link;

Text:
	'Text' name=ID;

Button:
	'Button' name=ID;

Spinner:
	'Spinner' name=ID;

Link:
	'Link' name=ID '->' activity=[Activity];
    
